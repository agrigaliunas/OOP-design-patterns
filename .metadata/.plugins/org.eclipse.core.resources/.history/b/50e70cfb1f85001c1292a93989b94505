package program;

public class Pi {
	private static Pi instanciaUnica;
	public Double valorPi;
	private Pi() {}
	
	private Pi getInstance() {
		if(instanciaUnica == null) {
			instanciaUnica = new Pi();
			
		}
		return instanciaUnica;
	}
	
	public void setValorPi() {
		valorPi = Math.PI;
	}
	
	public Double getValorPi() {
		return valorPi;
	}
}
