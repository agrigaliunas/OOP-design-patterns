package program;

public class Pi {
	private static Pi instanciaPi = new Pi(pi);
	private double pi;
	private Pi(Double pi) {
		this.pi = pi;
	}
	
	public static Pi getInstance() {
		return instanciaPi;
	}
	
	public void setPi() {
		this.pi = Math.PI;
	}
	
	public double getPi() {
		return pi;
	}
}
